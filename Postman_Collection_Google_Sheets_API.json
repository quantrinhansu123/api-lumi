            "url": {
              "raw": "{{baseUrl}}/sheet/copy",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "copy"]
            }
          }
        },
        {
          "name": "Validate Batch Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type", 
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rows\": [\n    {\n      \"maDonHang\": \"VALID001\",\n      \"name\": \"Valid User\",\n      \"phone\": \"0123456789\"\n    },\n    {\n      \"maDonHang\": \"INVALID001\"\n      // Missing required fields\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sheet/{{sheetName}}/validate",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "{{sheetName}}", "validate"]
