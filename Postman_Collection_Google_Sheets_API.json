              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rows\": [\n    {\n      \"maDonHang\": \"IMPORT001\",\n      \"name\": \"Import User 1\",\n      \"phone\": \"0111000111\"\n    },\n    {\n      \"maDonHang\": \"IMPORT002\",\n      \"name\": \"Import User 2\", \n      \"phone\": \"0222000222\"\n    }\n  ],\n  \"options\": {\n    \"skipErrors\": true,\n    \"clearBeforeImport\": false\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sheet/{{sheetName}}/import",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "{{sheetName}}", "import"]
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sheet/{{sheetName}}/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "{{sheetName}}", "statistics"]
            }
          }
        },
        {
          "name": "Find and Replace",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"searchValue\": \"Mới tạo\",\n  \"replaceValue\": \"Đã xác nhận\",\n  \"options\": {\n    \"searchColumns\": [\"trangThaiDon\"],\n    \"exactMatch\": true,\n    \"caseSensitive\": false\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sheet/{{sheetName}}/find-replace",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "{{sheetName}}", "find-replace"]
            }
          }
        },
        {
          "name": "Export CSV",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sheet/{{sheetName}}/export/csv",
              "host": ["{{baseUrl}}"],
              "path": ["sheet", "{{sheetName}}", "export", "csv"]
            }
          }
