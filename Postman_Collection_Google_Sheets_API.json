        {
          "name": "Copy Sheet Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceSheetName\": \"{{sheetName}}\",\n  \"targetSheetName\": \"F3 backup\"\n}"
